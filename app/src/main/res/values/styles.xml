<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom FAB style -->
    <style name="Widget.FoodTracker.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Circular</item>
    </style>

    <!-- Circle shape appearance -->
    <style name="ShapeAppearance.Circular" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Dropdown border color -->
    <style name="DropdownHintOverlay" parent="">
        <item name="hintTextAppearance">@style/DropdownHintText</item>
        <item name="boxStrokeColor">?attr/colorOutline</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="DropdownHintText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>



</resources>



